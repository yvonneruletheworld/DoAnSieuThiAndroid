<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        android:id="@+id/cartView"
        android:background="@color/yellow_bg_1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/c_img"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/c_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/robotomedium"
                    android:text="Hiển thị tên sản phẩm"
                    android:textSize="15dp"
                    android:textColor="@color/black_bg"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/c_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/black_bg"
                    android:text="Hiển thị giá sản phẩm"
                    android:textSize="15dp"
                    android:alpha="0.5">

                </TextView>

                <TextView
                    android:id="@+id/c_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:text="Hiển thị giá sản phẩm"
                    android:textColor="@color/n1_900_color"
                    android:textSize="17dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/c_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/black_bg"
                    android:text="EXP: "
                    android:textSize="15dp"
                    android:alpha="0.5">

                </TextView>
                <Button
                    android:id="@+id/get_dis"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:icon="@drawable/icons8_movie_ticket_32"
                    app:iconPadding="0dp"></Button>

            </LinearLayout>
            </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>